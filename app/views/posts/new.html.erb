<h1>新規投稿</h1>


<%= form_with(model: @post, url: posts_path, method: :post) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
	<table class="table">
        <tbody>
        	<tr>
                <th>画像</th>
                <td><%= f.attachment_field :image %></td>
            </tr>
            <tr>
                <th>国名</th>
                <td><%= f.collection_select :country_id, Country.all,:id,:country %></td>
            </tr>
            <tr>
                <th>滞在期間</th>
                <td><%= f.date_select :depature_date, use_month_numbers: true , start_year: 1930 %> ~ <%= f.date_select :return_date, use_month_numbers: true , start_year: 1930 %></td>
            </tr>
            <tr>
                <th>ビザ</th>
                <td>
                    <label><%= f.radio_button :visa, :true, checked: true %> 有</label>
                    <label><%= f.radio_button :visa, :false %> 無</label>
                </td>
            </tr>
            <tr>
                <th>ワクチン</th>
                <td><%= f.select :vaccine_id, Vaccine.pluck(:name,:id) %></td>
            </tr><tr>
                <th>メモ</th>
                <td><%= f.text_area :memo %></td>
            </tr>

        </tbody>
    </table>




    <%= f.text_field :city_address, class:"city_address" %>
    <%= button{id:"searchAddressBtn", value:"検索", type:"button"} %>
      場所を検索

      地図の描画
  #map{:style => "width: 100%; height: 160px;"}
            <%= f.text_field :latitude, readonly:"readonly" %>   //緯度の表示
            <%= f.text_field :longitude, readonly:"readonly"　%>  //経度の表示

//省略

//上記緯度と経度を店舗の情報と一緒にテーブルに保存する


<%= f.submit '投稿' %>
<% end %>


