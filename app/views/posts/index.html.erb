


<div class="container">
    <div class="row">
    	<div class="col-sm-10 col-sm-offset-1">
		<% @posts.each do |post| %>
			<div class="box">
			<%= attachment_image_tag post, :image, :fill, 100, 100 %>
			</div>
			<div class="text">
			<p><%=link_to Country.find(post.country_id).country , post_path(post.id) %></p>
			<p><%=link_to post.memo , post_path(post.id) %></p>
			</div>
		<% end %>

			<h1>
				<p>name/<%=@user.name%></p>
			</h1>
    	</div>
   </div>
</div>