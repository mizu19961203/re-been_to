<!DOCTYPE html>
<html>
	<head>
	    <title>been_to</title>
	    <%= csrf_meta_tags %>
	    <%= csp_meta_tag %>
	    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	    <meta name="viewport" content="width=device-width,initial-scale=1.0">
	</head>
	<body>
	<!-- header -->
		<div id="header">
			<nav class="navbar" style="height: 120px; padding: 30px; font-size: 17px;">
				<div class="container-fluid">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<a class="navbar-brand" href="/posts" style="font-family:-apple-system, BlinkMacSystemFont; color:black; font-size: 50px; margin-left:150px;">
							Been to
						</a>
					</div>
					<div class="collapse navbar-collapse" id="navbarEexample7">
						<ul class="nav navbar-nav" style="float: right; margin-right:150px;">
						<% if user_signed_in? %>
							<li>
								<%= link_to ' MyPage ',user_path(current_user), class: "glyphicon glyphicon-user"%>
							</li>
							<li>
								<%=link_to " 投稿 " ,new_post_path, class: "glyphicon glyphicon-edit" %>
							</li>
							<li>
								<%= link_to ' 一覧 ',posts_path, class: "glyphicon glyphicon-book"%>
							</li>
							<li>
								<%= link_to ' ログアウト ',destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out"%>
							</li>
						<% else %>
				            <li>
				               <%= link_to ' Home ',root_path, class: "glyphicon glyphicon-home"%>
				            </li>
				            <li>
				              <%= link_to ' ログイン ',new_user_session_path, class: "glyphicon glyphicon-log-in"%>
				            </li>
				            <li>
				              <%= link_to ' 新規登録  ',new_user_registration_path, class: "glyphicon glyphicon-edit"%>
				            </li>
					    </ul>
			            <% end %>
			        </div>
				</div>
			</nav>
		</div>
		<div id="wrapper">
			<%= yield %>
		</div>
		<!-- footer -->
		<div id="footer" class="d-flex align-items-center justify-content-center">
			<p class="text-center" style=" height: 40px;">
				<small style="line-height: 40px;">Copyright ©2020 BeenTo, All Rights Reserved.</small>
			</p>
		</div>
	</body>
</html>

