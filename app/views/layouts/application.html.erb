<!DOCTYPE html>
<html>
  <head>
    <title>been_to</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <body>
 	<header class="navbar navbar-fixed-top navbar-inverse">
	   <div class="container">
	    <nav class="nav navbar-nav navbar-left">
	      <span>Been_to</span>
	    </nav>
	      <nav>
	       <ul class="nav navbar-nav navbar-right">
	        <% if user_signed_in? %>
	            <li>
	              <%= link_to ' Home ',user_path(current_user), class: "glyphicon glyphicon-home"%>
	            </li>
	            <li>
	            	<%=link_to "New Post" ,new_post_path %>
	            </li>
	            <li>
	               <%= link_to ' Lists ',posts_path, class: "glyphicon glyphicon-book"%>
	            </li>
	            <li>
	               <%= link_to ' Log out ',destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out"%>
	            </li>
	        <% else %>
	            <li>
	               <%= link_to ' Home ',root_path, class: "glyphicon glyphicon-home"%>
	            </li>
	            <li>
	               <%= link_to ' About ',home_about_path, class: "glyphicon glyphicon-home"%>
	            </li>
	            <li>
	              <%= link_to ' Sign up  ',new_user_registration_path, class: "glyphicon glyphicon-edit"%>
	            </li>
	            <li>
	              <%= link_to ' Log in ',new_user_session_path, class: "glyphicon glyphicon-log-in"%>
	            </li>
	        <% end %>
	       </ul>
	      </nav>
	    </div>
    </header>
 	<%= yield %>
 </body>
</html>