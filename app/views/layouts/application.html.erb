<!DOCTYPE html>
<html>
  <head>
    <title>been_to</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
  </head>

 <body>
 	<header class="header">
	   	<div class="row" style="width:70%; margin:0 auto; padding: 20px;">
	       	<ul class="navbar-nav nav">
	       		<% if user_signed_in? %>
		            <li>
		              <%= link_to ' MyPage ',user_path(current_user), class: "glyphicon glyphicon-user"%>
		            </li>
		            <li>
		            	<%=link_to " NewPost " ,new_post_path, class: "glyphicon glyphicon-edit" %>
		            </li>
		            <li>
		               <%= link_to ' Lists ',posts_path, class: "glyphicon glyphicon-book"%>
		            </li>
		            <li>
		               <%= link_to ' Logout ',destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out"%>
		            </li>
		        <% else %>
		            <li>
		               <%= link_to ' Home ',root_path, class: "glyphicon glyphicon-home"%>
		            </li>
		            <li>
		               <%= link_to ' About ',home_about_path, class: "glyphicon glyphicon-home"%>
		            </li>
		            <li>
		              <%= link_to ' Sign-up  ',new_user_registration_path, class: "glyphicon glyphicon-edit"%>
		            </li>
		            <li>
		              <%= link_to ' Sign-in ',new_user_session_path, class: "glyphicon glyphicon-log-in"%>
		            </li>
		        <% end %>
	       	</ul>
	  	</div>
    </header>
 	<%= yield %>
 </body>
</html>