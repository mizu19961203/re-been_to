<h1>投稿一覧</h1>
<table class="table">
    <thead>
        <tr>
        	<th>投稿ID</th>
            <th>ユーザー名</th>
            <th>国名</th>
            <th>出発日</th>
            <th>終了日</th>
            <th>ビザ</th>
            <th>ワクチン</th>
            <th>メモ</th>
        </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
        <tr>
        	<td><%= link_to post.id , admin_post_path(post.id) %></td>
            <td><%= link_to post.user.name , admin_user_path(post.user.id) %></td>
            <td><%= Country.find(post.country_id).country %></td>
            <td><%= post.depature_date %></td>
            <td><%= post.return_date %></td>
            <td><% if post.visa %>◯<% else %>×<% end %></td>
            <td><%= Vaccine.find(post.vaccine_id).name %></td>
            <td><%= post.memo %></td>
            <td>
            	<%= link_to "編集", edit_admin_post_path(post.id) %> |
                <%= link_to "削除", admin_post_path(post.id) , method: :delete ,"data-confirm" => "本当に削除しますか？"%>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>